<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ModulMateri.modul.ModulDetail"
    >

    <TextView
        android:id="@+id/modul_detail_tv_modul_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="nama modul"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/modul_detail_cv_materi"
        android:layout_width="374dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#80678983"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/materi_menu"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Open Materi"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:text="Level UP"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/modul_detail_cv_quiz"
        android:layout_width="374dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="300dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#80678983"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/materi_quiz"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TAP"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:layout_gravity="top|center_horizontal"
            />
    </androidx.cardview.widget.CardView>


</LinearLayout>