<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/list_rv_quiz_cv_quiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_list"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/quiz_list">

            <androidx.cardview.widget.CardView
                android:id="@+id/list_rv_quiz_card_profile"
                android:layout_width="112dp"
                android:layout_height="111dp"
                android:layout_marginStart="5dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.39">

                <ImageView
                    android:id="@+id/list_rv_quiz_imv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/quiz_list_image"
                    android:src="@drawable/profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.39" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/list_rv_quiz_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="12dp"
                android:maxWidth="200dp"
                android:textStyle="bold"
                android:text="title"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/list_rv_quiz_card_profile"
                app:layout_constraintTop_toTopOf="@+id/list_rv_quiz_card_profile" />

            <TextView
                android:id="@+id/list_rv_quiz_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/list_rv_quiz_tv_title"
                app:layout_constraintTop_toBottomOf="@+id/list_rv_quiz_tv_title"
                app:layout_constraintVertical_bias="0.293" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>