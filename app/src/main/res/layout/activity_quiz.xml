<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ModulMateri.Quiz"
    android:background="@drawable/gradasikuning">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="150dp"
            android:text="Soal 3"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold">
        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/transparant">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="2"
                android:columnCount="2"

                >
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="50dp"
                    android:text="2 buah"
                    android:textStyle="bold"
                    android:background="@drawable/option"
                    >
                </Button>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="50dp"
                    android:text="5 buah"
                    android:textStyle="bold"
                    android:background="@drawable/option"
                    >
                </Button>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="50dp"
                    android:text="1 buah"
                    android:textStyle="bold"
                    android:background="@drawable/option"
                    >
                </Button>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="50dp"
                    android:text="9 buah"
                    android:textStyle="bold"
                    android:background="@drawable/option"
                    >
                </Button>
            </GridLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/buah_1"
                android:background="@drawable/profile"
                >

            </ImageView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btngradasi"
                android:text="Nilai 15 Point"
                android:textAlignment="center"
                android:padding="20dp"
                android:layout_marginTop="365dp"
                android:layout_marginHorizontal="120dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:layout_marginHorizontal="50dp"
                android:text="Berapakah jumlah buah Strawberry yang ada pada gambar di atas?"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                >
            </TextView>





        </RelativeLayout>


    </RelativeLayout>


</ScrollView>