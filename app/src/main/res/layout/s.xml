<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.auth.Register"
    android:orientation="vertical"
    android:background="#FFFBEB"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_profile_imv_profileImage"
            android:layout_width="104dp"
            android:layout_height="103dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="161dp"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="163dp"
            app:srcCompat="@drawable/ic_baseline_photo_camera_24" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/settings_wrapper_field"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_profile_et_fullName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_login_wrapper"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="18dp"
            android:hint="Nama Lengkap"
            android:paddingLeft="15dp"
            android:textColorHint="#A6000000" />


        <EditText
            android:id="@+id/edit_profile_et_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_login_wrapper"
            android:drawableStart="@drawable/ic_account_20"
            android:drawablePadding="18dp"
            android:hint="Nama Pengguna"
            android:paddingLeft="15dp"
            android:textColorHint="#A6000000" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_login_wrapper"
            android:drawableStart="@drawable/ic_lock_20"
            android:drawablePadding="18dp"
            android:hint="Kata Sandi"
            android:paddingLeft="15dp"
            android:textColorHint="#A6000000" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/edit_profile_btn_save"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:background="@drawable/rounded_button_masuk"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>